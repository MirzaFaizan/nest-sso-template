{
  "name": "nest-sso-template",
  "version": "1",
  "description": "Nest SSO backend with predefined settings. Ready to build.",
  "private": true,
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mirzafaizan/nest-sso-template"
  },
  "author": {
    "name": "Faizan Ejaz",
    "url": "https://mirzafaizan.me",
    "github": "https://github.com/mirzafaizan",
    "twitter": "https://twitter.com/mirzafaizanejaz"
  },
  "bugs": {
    "url": "https://github.com/mirzafaizan/nest-sso-template/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tsc && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "npm run docker:delete:testDB && docker-compose up -d postgres-test",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "posttest:e2e": "npm run docker:delete:testDB",
    "migrate": "typeorm migration:run",
    "typeorm": "typeorm",
    "resetDB": "npm run docker:delete:dbs && npm run docker:start:dbs",
    "docker:delete:dbs": "docker-compose stop postgres && docker-compose rm -f postgres && docker-compose stop redis && docker-compose rm -f redis",
    "docker:delete:testDB": "docker-compose stop postgres-test && docker-compose rm -f postgres-test",
    "docker:start:dbs": "docker-compose up -d postgres && docker-compose up -d redis",
    "docker:stop:dbs": "docker-compose stop postgres && docker-compose stop redis",
    "docker:start:pgadmin": "docker-compose up -d pgadmin",
    "docker:stop:pgadmin": "docker-compose up -d pgadmin"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.4.4",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/mapped-types": "^0.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/typeorm": "^7.1.3",
    "@sendgrid/mail": "^7.2.5",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-session": "^1.17.1",
    "helmet": "^4.1.1",
    "joi": "^17.2.1",
    "nestjs-redis": "^1.2.8",
    "nestjs-session": "^1.0.1",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.4.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.14",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.8",
    "@types/express-rate-limit": "^5.1.0",
    "@types/jest": "26.0.13",
    "@types/node": "^14.10.1",
    "@types/passport-google-oauth20": "^2.0.4",
    "@types/passport-linkedin-oauth2": "^1.5.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "26.4.2",
    "supertest": "^4.0.2",
    "ts-jest": "26.3.0",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
